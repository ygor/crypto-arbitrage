{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/arbitrage-bot-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ArbitrageBot": {
    "IsEnabled": true,
    "AutoTradeEnabled": false,
    "PaperTradingEnabled": true,
    "MinimumProfitPercentage": 0.5,
    "MaxConcurrentOperations": 3,
    "PollingIntervalMs": 100,
    "TradingPairs": [
      "BTC/EUR",
      "ETH/EUR",
      "BTC/USDT",
      "ETH/USDT"
    ],
    "RiskProfile": {
      "Type": "Conservative", 
      "MaxCapitalPerTradePercent": 5.0,
      "MaxCapitalPerAssetPercent": 15.0,
      "StopLossPercentage": 0.5,
      "DailyLossLimitPercent": 3.0
    },
    "Exchanges": {
      "Binance": {
        "IsEnabled": true,
        "ApiKey": "",
        "ApiSecret": ""
      },
      "Coinbase": {
        "IsEnabled": true,
        "ApiKey": "",
        "ApiSecret": ""
      },
      "Kraken": {
        "IsEnabled": true,
        "ApiKey": "",
        "ApiSecret": ""
      }
    },
    "Notifications": {
      "Email": {
        "Enabled": false,
        "SmtpServer": "smtp.example.com",
        "SmtpPort": 587,
        "Username": "",
        "Password": "",
        "FromAddress": "no-reply@example.com",
        "ToAddresses": ["admin@example.com"]
      },
      "Webhook": {
        "Enabled": false,
        "Url": "https://example.com/webhook",
        "AuthToken": ""
      }
    }
  }
}
