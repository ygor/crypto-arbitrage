{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CryptoArbitrage.Infrastructure.Database": "Debug",
      "CryptoArbitrage.Infrastructure.Repositories.MongoDbArbitrageRepository": "Debug"
    }
  },
  "ConnectionStrings": {
    "MongoDb": "${MONGODB_CONNECTION_STRING:mongodb://admin:password@mongodb-staging:27017}",
    "Redis": "${REDIS_CONNECTION_STRING:redis-staging:6379}"
  },
  "Database": {
    "UseMongoDb": true,
    "MigrateFromFiles": true
  },
  "MongoDb": {
    "DatabaseName": "${MONGODB_DATABASE_NAME:CryptoArbitrage_Staging}",
    "MaxConnectionPoolSize": 100,
    "ConnectionTimeoutMs": 20000,
    "SocketTimeoutMs": 20000,
    "ServerSelectionTimeoutMs": 20000,
    "UseSsl": false
  },
  "CryptoArbitrage": {
    "IsEnabled": true,
    "PaperTradingEnabled": true,
    "AutoTradeEnabled": false,
    "MinimumProfitPercentage": 0.3,
    "MaxConcurrentOperations": 8,
    "PollingIntervalMs": 1500,
    "RiskProfile": {
      "Type": "Moderate",
      "MaxCapitalPerTradePercent": 8.0,
      "MaxCapitalPerAssetPercent": 20.0,
      "MinimumProfitPercentage": 0.6,
      "MaxSlippagePercentage": 0.3,
      "StopLossPercentage": 0.8,
      "MaxRetryAttempts": 3
    }
  },
  "Exchanges": {
    "coinbase": {
      "Enabled": true,
      "UseRealApi": true,
      "ApiKey": "${COINBASE_SANDBOX_API_KEY}",
      "ApiSecret": "${COINBASE_SANDBOX_API_SECRET}",
      "Passphrase": "${COINBASE_SANDBOX_PASSPHRASE}",
      "BaseUrl": "https://api-public.sandbox.exchange.coinbase.com",
      "WebSocketUrl": "wss://ws-feed-public.sandbox.exchange.coinbase.com",
      "MaxRequestsPerSecond": 8,
      "ApiTimeoutMs": 20000
    },
    "kraken": {
      "Enabled": true,
      "UseRealApi": false,
      "MaxRequestsPerSecond": 15,
      "ApiTimeoutMs": 20000
    }
  }
} 