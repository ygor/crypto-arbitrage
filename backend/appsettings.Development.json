{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "CryptoArbitrage.Infrastructure.Database": "Debug",
      "CryptoArbitrage.Infrastructure.Repositories.MongoDbArbitrageRepository": "Debug",
      "CryptoArbitrage.Application.Services": "Debug"
    }
  },
  "ConnectionStrings": {
    "MongoDb": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },
  "Database": {
    "UseMongoDb": true,
    "MigrateFromFiles": true
  },
  "MongoDb": {
    "DatabaseName": "CryptoArbitrage_Dev",
    "MaxConnectionPoolSize": 50,
    "ConnectionTimeoutMs": 10000,
    "SocketTimeoutMs": 10000,
    "ServerSelectionTimeoutMs": 10000,
    "UseSsl": false
  },
  "CryptoArbitrage": {
    "IsEnabled": true,
    "PaperTradingEnabled": true,
    "AutoTradeEnabled": false,
    "MinimumProfitPercentage": 0.1,
    "PollingIntervalMs": 2000
  },
  "Exchanges": {
    "coinbase": {
      "Enabled": true,
      "UseRealApi": true,
      "ApiKey": "${COINBASE_API_KEY}",
      "ApiSecret": "${COINBASE_API_SECRET}",
      "Passphrase": "${COINBASE_PASSPHRASE}",
      "BaseUrl": "https://api.exchange.coinbase.com",
      "WebSocketUrl": "wss://ws-feed.exchange.coinbase.com",
      "MaxRequestsPerSecond": 5,
      "ApiTimeoutMs": 10000
    },
    "kraken": {
      "Enabled": true,
      "UseRealApi": true,
      "ApiKey": "${KRAKEN_API_KEY}",
      "ApiSecret": "${KRAKEN_API_SECRET}",
      "BaseUrl": "https://api.kraken.com",
      "WebSocketUrl": "wss://ws.kraken.com",
      "MaxRequestsPerSecond": 5,
      "ApiTimeoutMs": 10000
    }
  }
} 