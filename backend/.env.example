# Crypto Arbitrage System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# EXCHANGE API CREDENTIALS
# =============================================================================

# Coinbase Pro/Advanced Trade API
# Get these from: https://pro.coinbase.com/profile/api
# NOTE: Coinbase Pro is being migrated to Advanced Trade API
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Kraken API
# Get these from: https://www.kraken.com/u/security/api
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE_NAME=CryptoArbitrage_Dev

# Redis Connection (for caching)
REDIS_CONNECTION_STRING=localhost:6379

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Trading Configuration
PAPER_TRADING_ENABLED=true
AUTO_TRADE_ENABLED=false
MINIMUM_PROFIT_PERCENTAGE=0.1

# Polling and Performance
POLLING_INTERVAL_MS=2000
API_TIMEOUT_MS=10000
MAX_REQUESTS_PER_SECOND=5

# =============================================================================
# SECURITY & LOGGING
# =============================================================================

# Logging Level (Debug, Information, Warning, Error)
LOG_LEVEL=Debug

# JWT Secret (for API authentication if needed)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to true to use stub/mock exchanges for testing
USE_STUB_EXCHANGES=false

# Set to true to enable detailed error responses
DETAILED_ERRORS=true

# API URLs (usually don't need to change these)
COINBASE_BASE_URL=https://api.exchange.coinbase.com
COINBASE_WEBSOCKET_URL=wss://ws-feed.exchange.coinbase.com
KRAKEN_BASE_URL=https://api.kraken.com
KRAKEN_WEBSOCKET_URL=wss://ws.kraken.com
