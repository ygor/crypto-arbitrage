{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.local/coinbase/ws/subscribe.schema.json",
  "title": "Coinbase WebSocket Subscribe",
  "type": "object",
  "required": ["type", "product_ids", "channels"],
  "properties": {
    "type": { "const": "subscribe" },
    "product_ids": {
      "type": "array",
      "items": { "type": "string", "minLength": 3 },
      "minItems": 1
    },
    "channels": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          { "type": "string", "minLength": 3 },
          {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string", "minLength": 3 },
              "product_ids": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              }
            },
            "additionalProperties": true
          }
        ]
      }
    }
  },
  "additionalProperties": true
} 