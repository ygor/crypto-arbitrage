{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.local/kraken/ws-v2/ticker.snapshot.schema.json",
  "title": "Kraken WS v2 Ticker Snapshot",
  "type": "object",
  "required": ["channel", "type", "data"],
  "properties": {
    "channel": { "const": "ticker" },
    "type": { "const": "snapshot" },
    "data": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["symbol", "bid", "ask"],
        "properties": {
          "symbol": { "type": "string" },
          "bid": { "type": "number" },
          "bid_qty": { "type": "number" },
          "ask": { "type": "number" },
          "ask_qty": { "type": "number" },
          "last": { "type": "number" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
} 